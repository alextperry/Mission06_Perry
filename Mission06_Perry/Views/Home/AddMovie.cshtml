@model Mission06_Perry.Models.Movie

<!-- Page where user can add a movie to the movie collections database -->
<div>
    <h2>Fill out information about a movie to add to the movie collection!</h2>
</div>

<br />

<!-- form that allows the user to input a movie based on different attributes of the movie -->
<div>
    <form method="post">
        <input type="hidden" asp-for="movieID"/>

        <label asp-for="Title">Movie Title:</label>
        <input required asp-for="Title"/>
        <br />
        <br />
        <select asp-for="CategoryID">Category: 
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>  
            }
        </select>

        <br />
        <br />
        <label asp-for="Year">Year</label>
        <input required asp-for="Year"/>
        <br />
        <br />
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <br />
        <br />
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <br />
        <label asp-for="Edited">Edited?:</label>
        <select required asp-for="Edited">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
        <br />
        <br />
        <label asp-for="LentTo">Name of Person Lent to:</label>
        <input asp-for="LentTo" />
        <br />
        <br />
        <label asp-for="CopiedToPlex">Copied to Plex:</label>
        <select required asp-for="CopiedToPlex">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
        <br />
        <br />
        <label asp-for="Notes">Notes (25 character limit):</label>
        <input maxlength="25" asp-for="Notes" />
        <br />
        <br />

        <button type="submit">Submit Movie</button>

        <div asp-validation-summary="All"></div>

    </form>


</div>