@model Mission06_Perry.Models.Application

<!-- Page where user can add a movie to the movie collections database -->
<div>
    <h2>Fill out information about a movie to add to the movie collection!</h2>
</div>

<br />

<!-- form that allows the user to input a movie based on different attributes of the movie -->
<div>
    <form method="post">
        <label asp-for="Category">Category:</label>
        <input required asp-for="Category"/>
        <br />
        <br />
        <label asp-for="Title">Movie Title:</label>
        <input required asp-for="Title"/>
        <br />
        <br />
        <label asp-for="Year">Year</label>
        <input required asp-for="Year"/>
        <br />
        <br />
        <label asp-for="Director">Director:</label>
        <input required asp-for="Director" />
        <br />
        <br />
        <label asp-for="Rating">Rating:</label>
        <select required asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <br />
        <label asp-for="Edited">Edited?:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
        <br />
        <label asp-for="Lent">Name of Person Lent to:</label>
        <input asp-for="Lent" />
        <br />
        <br />
        <label asp-for="Notes">Notes (25 character limit):</label>
        <input maxlength="25" asp-for="Notes" />
        <br />
        <br />

        <button type="submit">Submit Movie</button>


    </form>


</div>
